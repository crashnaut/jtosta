{
	"name": "jtosta",
	"version": "0.1.0",
	"private": true,
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build && cp -r src/content build/",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --check . && eslint .",
		"format": "prettier --write .",
		"deploy": "npm run build && firebase deploy",
		"deploy:prod": "npm run build && firebase deploy --only hosting:production",
		"deploy:staging": "npm run build && firebase deploy --only hosting:staging",
		"promote-to-prod": "firebase hosting:clone tostamente:live jtosta-com:live"
	},
	"dependencies": {
		"@fontsource/inter": "^5.2.5",
		"@types/marked": "^6.0.0",
		"clsx": "^2.1.1",
		"firebase": "^11.6.1",
		"gray-matter": "^4.0.3",
		"lucide-svelte": "^0.507.0",
		"markdown-it": "^14.1.0",
		"marked": "^15.0.11",
		"tailwind-merge": "^3.2.0"
	},
	"devDependencies": {
		"@fontsource-variable/inter": "^5.2.5",
		"@sveltejs/adapter-auto": "^6.0.0",
		"@sveltejs/adapter-node": "^5.2.12",
		"@sveltejs/adapter-static": "^3.0.1",
		"@sveltejs/kit": "^2.5.0",
		"@sveltejs/vite-plugin-svelte": "^5.0.3",
		"@tailwindcss/forms": "^0.5.7",
		"@tailwindcss/typography": "^0.5.10",
		"@typescript-eslint/eslint-plugin": "^7.0.0",
		"@typescript-eslint/parser": "^7.0.0",
		"autoprefixer": "^10.4.17",
		"eslint": "^8.56.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "^2.35.1",
		"mdsvex": "^0.12.5",
		"postcss": "^8.4.35",
		"prettier": "^3.1.1",
		"prettier-plugin-svelte": "^3.1.2",
		"rehype": "^13.0.2",
		"rehype-unwrap-images": "^1.0.0",
		"svelte": "^5.0.0-next.1",
		"svelte-check": "^4.1.7",
		"tailwindcss": "^3.4.1",
		"tslib": "^2.4.1",
		"typescript": "^5.0.0",
		"vite": "^6.3.5"
	}
}
