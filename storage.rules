rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Allow admin users to read and write to any file
    match /{allPaths=**} {
      allow read; // Anyone can read images (blog posts are public)
      allow write: if request.auth != null && isAdmin();
    }
    
    function isAdmin() {
      return request.auth.token.email in [
        'msell@totalperform.com',
        // Add other admin emails as needed
      ];
    }
  }
}